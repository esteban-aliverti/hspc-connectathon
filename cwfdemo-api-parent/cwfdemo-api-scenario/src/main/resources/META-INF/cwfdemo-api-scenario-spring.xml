<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

<!-- This profile is processed during web server startup -->

	<beans profile="root">
	
		<bean id="cwfDemoConfigScenarioRegistry" factory-method="getInstance"
			class="org.hspconsortium.cwfdemo.api.democonfig.ScenarioRegistry" />
		
	</beans>
	
	<beans profile="desktop">
	
		<bean id="scenarioContext" parent="managedContext"
			class="org.hspconsortium.cwfdemo.api.democonfig.ScenarioContext">
			<constructor-arg ref="cwfDemoConfigScenarioRegistry" />
		</bean>
	
	</beans>
	
</beans>
