<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:cwp="http://www.carewebframework.org/schema/plugin"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.1.xsd 
		http://www.carewebframework.org/schema/plugin
		http://www.carewebframework.org/schema/plugin/plugin-extensions.xsd">

<!-- This profile is processed during web server startup -->

	<beans profile="root">
		
		<!-- This is the sample definition for a CareWeb plugin -->
		<cwp:plugin id="cwfDemoConfig" name="Configure Demo" 
			url="~./org/hspconsortium/cwfdemo/ui/democonfig/demoConfig.zul">
			<cwp:resource>
				<cwp:action-resource id="cwfDemoConfigShow"
					label="${labels.cwfdemoconfig.action.label}"
					script="zscript:org.hspconsortium.cwfdemo.ui.democonfig.DemoConfigController.show();" /> 
			</cwp:resource>
		</cwp:plugin>
		
	</beans>
	
<!-- This profile is processed for each managed desktop. -->

	<beans profile="desktop">
	
		<bean id="cwfDemoConfigController" scope="prototype"
			class="org.hspconsortium.cwfdemo.ui.democonfig.DemoConfigController">
			<constructor-arg ref="cwfDemoConfigScenarioRegistry" />
		</bean>	
			
	</beans>
</beans>
