<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:w="http://www.zkoss.org/2005/zk/client"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">

	<vlayout apply="${cwfDemoConfigController}" style="padding: 5px">
		<combobox id="cboScenarios" readonly="true" width="100%"
			placeholder="Select a scenario"/>
		<space height="10px" />
		<toolbar align="center" mold="panel">
			<button id="btnDelete" label="Delete Scenario" disabled="true"
				zclass="btn" sclass="btn-danger btn-xs"/>
			<button id="btnInit" label="Initialize Scenario" disabled="true"
				zclass="btn" sclass="btn-success btn-xs"/>
		</toolbar>
		<space height="10px" />
		<label id="lblMessage" multiline="true" />
	</vlayout>

</zk>